<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.dao.StarDao">

    <resultMap id="BaseResultMap" type="com.hs.entity.Star">
        <!--@Table star-->
        <result property="staId" column="sta_id" jdbcType="INTEGER"/>
        <result property="conId" column="con_id" jdbcType="INTEGER"/>
        <result property="comId" column="com_id" jdbcType="INTEGER"/>
        <result property="bySp1" column="by_sp1" jdbcType="VARCHAR"/>
        <result property="bySp2" column="by_sp2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          sta_id, con_id, com_id, by_sp1, by_sp2
        from web-shop.star
        where sta_id = #{staId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          sta_id, con_id, com_id, by_sp1, by_sp2
        from web-shop.star
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          sta_id, con_id, com_id, by_sp1, by_sp2
        from web-shop.star
        <where>
            <if test="staId != null">
                and sta_id = #{staId}
            </if>
            <if test="conId != null">
                and con_id = #{conId}
            </if>
            <if test="comId != null">
                and com_id = #{comId}
            </if>
            <if test="bySp1 != null and bySp1 != ''">
                and by_sp1 = #{bySp1}
            </if>
            <if test="bySp2 != null and bySp2 != ''">
                and by_sp2 = #{bySp2}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="staId" useGeneratedKeys="true">
        insert into web-shop.star(con_id, com_id, by_sp1, by_sp2)
        values (#{conId}, #{comId}, #{bySp1}, #{bySp2})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update web-shop.star
        <set>
            <if test="conId != null">
                con_id = #{conId},
            </if>
            <if test="comId != null">
                com_id = #{comId},
            </if>
            <if test="bySp1 != null and bySp1 != ''">
                by_sp1 = #{bySp1},
            </if>
            <if test="bySp2 != null and bySp2 != ''">
                by_sp2 = #{bySp2},
            </if>
        </set>
        where sta_id = #{staId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from web-shop.star where sta_id = #{staId}
    </delete>

</mapper>