<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.dao.PhotoDao">

    <resultMap id="BaseResultMap" type="com.hs.entity.Photo">
        <!--@Table photo-->
        <result property="phoId" column="pho_id" jdbcType="INTEGER"/>
        <result property="phoUrl" column="pho_url" jdbcType="VARCHAR"/>
        <result property="comId" column="com_id" jdbcType="INTEGER"/>
        <result property="phoDefault" column="pho_default" jdbcType="OTHER"/>
        <result property="bySp1" column="by_sp1" jdbcType="VARCHAR"/>
        <result property="bySp2" column="by_sp2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          pho_id, pho_url, com_id, pho_default, by_sp1, by_sp2
        from web-shop.photo
        where pho_id = #{phoId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          pho_id, pho_url, com_id, pho_default, by_sp1, by_sp2
        from web-shop.photo
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          pho_id, pho_url, com_id, pho_default, by_sp1, by_sp2
        from web-shop.photo
        <where>
            <if test="phoId != null">
                and pho_id = #{phoId}
            </if>
            <if test="phoUrl != null and phoUrl != ''">
                and pho_url = #{phoUrl}
            </if>
            <if test="comId != null">
                and com_id = #{comId}
            </if>
            <if test="phoDefault != null">
                and pho_default = #{phoDefault}
            </if>
            <if test="bySp1 != null and bySp1 != ''">
                and by_sp1 = #{bySp1}
            </if>
            <if test="bySp2 != null and bySp2 != ''">
                and by_sp2 = #{bySp2}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="phoId" useGeneratedKeys="true">
        insert into web-shop.photo(pho_url, com_id, pho_default, by_sp1, by_sp2)
        values (#{phoUrl}, #{comId}, #{phoDefault}, #{bySp1}, #{bySp2})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update web-shop.photo
        <set>
            <if test="phoUrl != null and phoUrl != ''">
                pho_url = #{phoUrl},
            </if>
            <if test="comId != null">
                com_id = #{comId},
            </if>
            <if test="phoDefault != null">
                pho_default = #{phoDefault},
            </if>
            <if test="bySp1 != null and bySp1 != ''">
                by_sp1 = #{bySp1},
            </if>
            <if test="bySp2 != null and bySp2 != ''">
                by_sp2 = #{bySp2},
            </if>
        </set>
        where pho_id = #{phoId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from web-shop.photo where pho_id = #{phoId}
    </delete>

</mapper>