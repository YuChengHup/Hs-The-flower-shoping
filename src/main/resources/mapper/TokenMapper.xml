<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.dao.TokenDao">

    <resultMap id="BaseResultMap" type="Token">
        <!--@Table token-->
        <result property="token" column="token" jdbcType="VARCHAR"/>
        <result property="conId" column="con_id" jdbcType="INTEGER"/>
        <result property="isLogin" column="is_login" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          token, con_id, is_login
        from token
        where token = #{token}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          token, con_id, is_login
        from web-shop.token
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          token, con_id, is_login
        from web-shop.token
        <where>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
            <if test="conId != null">
                and con_id = #{conId}
            </if>
            <if test="isLogin != null">
                and is_login = #{isLogin}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="token" useGeneratedKeys="true">
        insert into web-shop.token(con_id, is_login)
        values (#{conId}, #{isLogin})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update web-shop.token
        <set>
            <if test="conId != null">
                con_id = #{conId},
            </if>
            <if test="isLogin != null">
                is_login = #{isLogin},
            </if>
        </set>
        where token = #{token}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from web-shop.token where token = #{token}
    </delete>

</mapper>