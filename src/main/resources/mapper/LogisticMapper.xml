<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.dao.LogisticDao">

    <resultMap id="BaseResultMap" type="com.hs.entity.Logistic">
        <!--@Table logistic-->
        <result property="logId" column="log_id" jdbcType="VARCHAR"/>
        <result property="ordId" column="ord_id" jdbcType="INTEGER"/>
        <result property="logStatus" column="log_status" jdbcType="VARCHAR"/>
        <result property="logCreate" column="log_create" jdbcType="TIMESTAMP"/>
        <result property="logEstimate" column="log_estimate" jdbcType="TIMESTAMP"/>
        <result property="bySp1" column="by_sp1" jdbcType="VARCHAR"/>
        <result property="bySp2" column="by_sp2" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          log_id, ord_id, log_status, log_create, log_estimate, by_sp1, by_sp2
        from web-shop.logistic
        where log_id = #{logId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          log_id, ord_id, log_status, log_create, log_estimate, by_sp1, by_sp2
        from web-shop.logistic
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          log_id, ord_id, log_status, log_create, log_estimate, by_sp1, by_sp2
        from web-shop.logistic
        <where>
            <if test="logId != null and logId != ''">
                and log_id = #{logId}
            </if>
            <if test="ordId != null">
                and ord_id = #{ordId}
            </if>
            <if test="logStatus != null and logStatus != ''">
                and log_status = #{logStatus}
            </if>
            <if test="logCreate != null">
                and log_create = #{logCreate}
            </if>
            <if test="logEstimate != null">
                and log_estimate = #{logEstimate}
            </if>
            <if test="bySp1 != null and bySp1 != ''">
                and by_sp1 = #{bySp1}
            </if>
            <if test="bySp2 != null and bySp2 != ''">
                and by_sp2 = #{bySp2}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="logId" useGeneratedKeys="true">
        insert into web-shop.logistic(ord_id, log_status, log_create, log_estimate, by_sp1, by_sp2)
        values (#{ordId}, #{logStatus}, #{logCreate}, #{logEstimate}, #{bySp1}, #{bySp2})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update web-shop.logistic
        <set>
            <if test="ordId != null">
                ord_id = #{ordId},
            </if>
            <if test="logStatus != null and logStatus != ''">
                log_status = #{logStatus},
            </if>
            <if test="logCreate != null">
                log_create = #{logCreate},
            </if>
            <if test="logEstimate != null">
                log_estimate = #{logEstimate},
            </if>
            <if test="bySp1 != null and bySp1 != ''">
                by_sp1 = #{bySp1},
            </if>
            <if test="bySp2 != null and bySp2 != ''">
                by_sp2 = #{bySp2},
            </if>
        </set>
        where log_id = #{logId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from web-shop.logistic where log_id = #{logId}
    </delete>

</mapper>