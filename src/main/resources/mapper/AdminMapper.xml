<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.mapper.AdminMapper">

    <resultMap id="BaseResultMap" type="Admin">
        <!--@Table admin-->
        <result property="admId" column="adm_id" jdbcType="INTEGER"/>
        <result property="admZh" column="adm_zh" jdbcType="VARCHAR"/>
        <result property="passwd" column="passwd" jdbcType="VARCHAR"/>
        <result property="bySp1" column="by_sp1" jdbcType="VARCHAR"/>
        <result property="bySp2" column="by_sp2" jdbcType="VARCHAR"/>
    </resultMap>



    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          adm_id, adm_zh, passwd, by_sp1, by_sp2
        from admin
        where adm_id = #{admId} and passwd=#{passwd}
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="admId" useGeneratedKeys="true">
        insert into web-shop.admin(adm_zh, passwd, by_sp1, by_sp2)
        values (#{admin}, #{passwd}, #{bySp1}, #{bySp2})
    </insert>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from web-shop.admin where adm_id = #{admId}
    </delete>


    <!--    通过id查询管理员-->
<!--    <select id="queryById" resultType="Admin">-->
<!--        select * from admin where adm_id=#{admId}-->
<!--    </select>-->

    <!--    通过id查找token-->
    <select id="findToken" resultType="Token">
        select * from token where adm_id=#{admId}
    </select>
    <!--    查询所有管理员-->
    <select id="findAllAdmin" resultType="Admin">
        select * from admin
    </select>

    <!--    添加管理员-->
    <insert id="addAdmin" parameterType="Admin">
        insert into admin values(null ,#{admZh},#{passwd},null,null)
    </insert>

    <!--    删除管理员-->
    <delete id="deleteAdmin">
        delete from admin where adm_id=#{admId}
    </delete>

    <!--    查询老密码-->
    <select id="findOldPasswdByAdmId" resultType="Admin">
        select * from admin where adm_id=#{admId}
    </select>

    <!--    修改密码-->
    <update id="updatePasswd">
        update admin set passwd=#{newPasswd} where adm_id=#{admId}
    </update>

</mapper>